<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF6F2"
    android:padding="24dp"
    android:gravity="center">

    <!-- Title Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IV Drip Consent Form"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#d48caf"
        android:layout_marginBottom="16dp" />

    <!-- Informational Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please read the consent form carefully before proceeding with the IV Drip service."
        android:textSize="18sp"
        android:textColor="#d48caf"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:gravity="center" />

    <!-- Detailed Consent Information -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By proceeding with the IV Drip service, you acknowledge and agree to the following:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- You consent to the administration of IV fluids under the supervision of trained healthcare professionals."
        android:textSize="14sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- You acknowledge the potential risks involved, including but not limited to, allergic reactions, infections, or other adverse effects."
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- You have been informed of the procedure, benefits, and any possible alternatives available."
        android:textSize="14sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Terms & Conditions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please ensure that you fully understand the risks and benefits of this treatment."
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Consent Agreement Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By approving, you agree to the terms and conditions of the IV Drip service."
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="32dp"
        android:gravity="center" />

    <!-- Approve Button -->
    <Button
        android:id="@+id/approveButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Approve"
        android:textSize="15sp"
        android:textColor="#000000"
        android:backgroundTint="#FFE3E0"
        android:background="@drawable/border"
        android:padding="2dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Disapprove Button -->
    <Button
        android:id="@+id/disapproveButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Disapprove"
        android:textSize="15sp"
        android:textColor="#000000"
        android:backgroundTint="#FFE3E0"
        android:background="@drawable/border"
        android:padding="2dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Additional Message (optional) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="You must approve to proceed with the IV Drip service."
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp" />
</LinearLayout>
