<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFF6F2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/greetingTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="8dp"
            android:text="Hello" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Update your account details below"
            android:paddingBottom="16dp" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:minHeight="48dp"
            android:textStyle="bold"
            android:hint="Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:hint="Surname"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:minHeight="48dp"
            android:textColor="#000000"
            android:hint="Current Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextNewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:minHeight="48dp"
            android:textColor="#000000"
            android:hint="New Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:minHeight="48dp"
            android:hint="Current Phone Number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editTextNewPhone"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:minHeight="48dp"
            android:hint="New Phone Number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:minHeight="48dp"
            android:hint="Current Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:hint="New Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textColor="#000000"
            android:hint="Current Address"
            android:textStyle="bold"
            android:inputType="textPostalAddress" />

        <EditText
            android:id="@+id/editTextNewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textColor="#000000"
            android:hint="New Address"
            android:textStyle="bold"
            android:inputType="textPostalAddress" />

        <Button
            android:id="@+id/buttonUpdateProfile"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:backgroundTint="#FFE3E0"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Update Profile" />

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:backgroundTint="#FFE3E0"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Logout" />

    </LinearLayout>
</ScrollView>
