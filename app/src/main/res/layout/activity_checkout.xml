<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF6F2"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/checkoutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFF6F2"
            android:text="Checkout"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!-- Name Input -->
        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColor="#000000"
            android:textStyle="bold"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:minHeight="48dp" />

        <!-- Surname Input -->
        <EditText
            android:id="@+id/surnameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Surname"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:minHeight="48dp" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:minHeight="48dp" />

        <!-- Home Address Input -->
        <EditText
            android:id="@+id/addressInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Home Address"
            android:inputType="textPostalAddress"
            android:padding="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:minHeight="48dp" />

        <!-- Phone Number Input -->
        <EditText
            android:id="@+id/phoneInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textColor="#000000"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:minHeight="48dp" />

        <!-- Button for Selecting Date and Time -->
        <Button
            android:id="@+id/dateTimeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Date and Time"
            android:layout_marginTop="16dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/border"
            android:backgroundTint="#FFE3E0"
            android:minHeight="48dp" />

        <!-- TextView for Displaying Selected Date and Time -->
        <TextView
            android:id="@+id/selectedDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No date selected"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />

        <!-- Total Cost -->
        <TextView
            android:id="@+id/totalCostCheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Total: R0.00"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp" />

        <!-- Make Payment Button -->
        <Button
            android:id="@+id/makePaymentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make Payment"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:background="@drawable/border"
            android:backgroundTint="#FFE3E0" />
    </LinearLayout>
</ScrollView>
